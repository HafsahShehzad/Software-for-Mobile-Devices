    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--   your app branding color for the app bar -->
        <item name="colorPrimary">#216177</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">#1b3d57</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">#00838f</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="primaryBtn">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/primarybtnselector</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="primebutton" parent="Base.TextAppearance.AppCompat.Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:shadowColor">#FF000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowRadius">0.2</item>
        <item name="android:textSize">16dip</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="secondaryBtn">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/secondary_btn_selector</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="SwitchCompatTheme" >
        <item name="colorControlActivated">@color/green</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splashscreen_background</item>
    </style>
</resources>
